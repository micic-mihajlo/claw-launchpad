# API server
PORT=8788
# CORS allow origin (dev)
WEB_ORIGIN=http://localhost:5173

# Deployments control plane
DEPLOYMENTS_DB_PATH=.clawpad/deployments.db
DEPLOYMENTS_ENCRYPTION_KEY=replace-with-a-strong-random-secret
DEPLOY_WORKER_ENABLED=true
DEPLOY_WORKER_INTERVAL_MS=2500
DEPLOY_WORKER_LEASE_MS=45000
PROVISIONER_SSH_PUBLIC_KEY_PATH=/absolute/path/to/id_ed25519.pub
# Optional, if you don't want to rely on ssh-agent/default identity
# PROVISIONER_SSH_PRIVATE_KEY_PATH=/absolute/path/to/id_ed25519

# Optional Convex realtime mirror
CONVEX_SYNC_ENABLED=false
CONVEX_URL=
CONVEX_DEPLOY_KEY=
CONVEX_SYNC_TIMEOUT_MS=8000

# Optional API authentication
# Set to "true" only when you want to enforce request authentication.
AUTH_ENABLED=false
AUTH_DEFAULT_USER_ID=system
# AUTH_MODE=token
# Use a single shared token (legacy/simple mode):
# AUTH_TOKEN=replace-with-bearer-token
# Use a token->user map for per-user tenant isolation:
# AUTH_TOKEN_MAP={"replace-with-token":"user_123","replace-with-other-token":"user_456"}
# Optional JWT mode for provider-issued tokens (Clerk, WorkOS, etc.):
# AUTH_MODE=jwt
# AUTH_JWKS_URL=https://api.workos.com/sso/jwks/client_...
# AUTH_JWT_SUB_CLAIM=sub
# AUTH_JWT_ISSUER=https://api.workos.com/
# AUTH_JWT_AUDIENCE=
# AUTH_JWT_ALGORITHMS=RS256
# AUTH_JWT_MAX_TOKEN_AGE_SECONDS=
